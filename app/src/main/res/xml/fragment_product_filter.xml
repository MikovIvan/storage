<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="filter_products"
        app:title="Sorted by">

        <ListPreference
            app:key="filter"
            app:title="Choose filter"
            android:defaultValue="none"
            android:entryValues="@array/pref_values"
            android:entries="@array/pref_options"
            android:summary="%s"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="db"
        app:title="Current Db">

        <ListPreference
            app:key="select_db"
            app:title="Select db"
            android:defaultValue="room"
            android:entryValues="@array/db_values"
            android:entries="@array/db_options"
            android:summary="%s"/>

    </PreferenceCategory>

</PreferenceScreen>